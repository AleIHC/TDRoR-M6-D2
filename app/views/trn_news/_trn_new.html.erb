<div id="<%= dom_id trn_new %>">

<div class="container">

    <div class= "col-md-8 news-title m-auto mb-5">
      <%= link_to trn_news_path, class: "mt-auto btn btn-dark" do %>
        <div class="d-flex">
          <p class="m-auto me-3">Back to news index</p><i class="bi bi-chevron-left"></i></i>
        </div>
      <%end %>
      <hr>
      <h3 class="news-title mt-5"><%= trn_new.title %></h3>
    </div>
      

      
    <div class="col-md-10 m-auto">
      <%= image_tag "#{trn_new.image}", class:"news-img" %>
    </div>

      
    <div class= "col-md-8 news-body m-auto mt-5">
      <%= trn_new.description %>
    </div>
</div>
        
      
</div>


